RewriteEngine On

# Skip rewriting for actual files and directories (including in public)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# Rewrite requests for static files to /public/
RewriteRule ^(css|js|images|media|public)/(.*)$ public/$2 [L]

# All other routes go to index.php (the router)
RewriteRule ^ index.php [QSA,L]
